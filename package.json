{
  "name": "ts-react-template",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "typescript": "^4.1.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "yarn lint:eslint && yarn lint:stylelint",
    "lint:eslint": "eslint --cache .",
    "lint:stylelint": "stylelint --cache ./src",
    "prepare": "husky install"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-jgchk": "^1.0.7",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unicorn": "^36.0.0",
    "husky": ">=6",
    "lint-staged": ">=10",
    "stylelint": "^13.13.1",
    "stylelint-config-jgchk": "^1.0.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix --max-warnings=0",
    "*.{js,jsx,ts,tsx,css}": "stylelint --cache --fix --max-warnings=0",
    "*": "prettier --write --ignore-unknown"
  }
}
